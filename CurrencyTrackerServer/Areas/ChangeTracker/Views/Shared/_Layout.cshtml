            </button>
            <a href="@Url.Link("default", new {action = "Index", controller = "Home"})" class="navbar-brand">Изменение за 24 часа</a>
        </div>

        <div class="collapse navbar-collapse" id="myNavbar">


            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Настройки", "Settings", "Home")</li>
                <li>
                    <a onclick="Reset()" href="#">Сброс</a>
                </li>
            </ul>

