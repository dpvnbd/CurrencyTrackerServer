            <form class="navbar-form navbar-left" role="search">
                <button type="button" class="btn btn-danger" id="connectionButton" onclick="connectClick()">Подключиться</button>

                <div class="checkbox navbar-btn">
                    <label class="navbar-link">
                        <input type="checkbox" id="speechCheckbox" checked="checked">
